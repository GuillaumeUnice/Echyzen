{# src/Echyzen/NewsBundle/Resources/views/layout.html.twig #}

{% extends "::public.html.twig" %}

{% block title %}
  {{ parent() }} - News
{% endblock %}

{% block javascripts %}
  {{ parent() }}
  <script src="{{ asset('bundles/echyzennews/js/newsAjax.js') }}" type="text/javascript" ></script>
{% endblock %}

{% block stylesheet %}

	{{ parent() }}
	{% stylesheets '@EchyzenNewsBundle/Resources/public/css/*' %}

		<link rel="stylesheet" href="{{ asset_url }}" type="text/css" />
	{% endstylesheets %}
{% endblock %}


{% block body %}

	{# On définit un sous-titre commun à toutes les pages du bundle, par exemple #}
	<div id="bandeau"><h1 class="bandeau_titre">News</h1><div id="bandeau_centre"></div></div>
 

	<div id="corps_bis">

		<div id="news_container">
			
			{# On définit un nouveau bloc, que les vues du bundle pourront remplir #}
			{% block echyzen_news_body %}
			{% endblock %}
			<div id="news1bis">
			</div>
		</div>
		<div id="news_categorie">

			<div id="rubrique">
				<h2>Rubrique</h2>
				<ul>
				{% for rubrique in rubriques %}
        			<li><a value="7" href="{{ path('news_by_rubrique', {'id': rubrique.id}) }}">{{ rubrique.nom | upper }}</a></li>
    			{% endfor %}
				</ul>
			</div>

			<div id="archive">
				<h2>Archive</h2>
				<ul>
					<li><a href="#">Juin 2014</a></li>
				</ul>
			</div>

			<div id="mot_clé">
				<h2>Mots-Clés</h2>
				<ul>
					<li><a href="#">#2D</a></li>
					<li><a href="#">#3D</a></li>
					<li><a href="#">#Ajax</a></li>
					<li><a href="#">#BDD</a></li>
					<li><a href="#">#Blender</a></li>
					
					<li><a href="#">#C++</a></li>
					<li><a href="#">#Java</a></li>
					<li><a href="#">#Javascript</a></li>
					<li><a href="#">#Linux</a></li>
					<li><a href="#">#PHP</a></li>
					
					
					<li><a href="#">#Web</a></li>
					<li><a href="#">#Windows</a></li>
					
				</ul>
			</div>			

			
		</div>

	</div>


{% endblock %}