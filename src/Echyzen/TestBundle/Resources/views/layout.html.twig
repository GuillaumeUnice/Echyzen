{# src/Echyzen/TestBundle/Resources/views/layout.html.twig #}

{% extends "::public.html.twig" %}

{% block title %}
  {{ parent() }} - Test
{% endblock %}

{% block javascripts %}
  {{ parent() }}
  <script src="{{ asset('bundles/echyzennews/js/testAjax.js') }}" type="text/javascript" ></script>
{% endblock %}

{% block stylesheet %}

	{{ parent() }}
	{% stylesheets '@EchyzenTestBundle/Resources/public/css/*' %}

		<link rel="stylesheet" href="{{ asset_url }}" type="text/css" />
	{% endstylesheets %}
{% endblock %}


{% block body %}

	{# On définit un sous-titre commun à toutes les pages du bundle, par exemple #}
	<div id="bandeau"><h1 class="bandeau_titre">Tests</h1><div id="bandeau_centre"></div></div>
 

	<div id="corps_bis">

		<div id="test_categorie">
			<button>Film</button>
			<button>Livre</button>
			<button>Jeux Video</button>
		</div>
		<div id="test_container">
			
			{# On définit un nouveau bloc, que les vues du bundle pourront remplir #}
			{% block echyzen_test_body %}
			{% endblock %}
		
		</div>


	</div>


{% endblock %}