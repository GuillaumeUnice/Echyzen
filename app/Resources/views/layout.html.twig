<!DOCTYPE html>
<html>
	<head>
		<title>{% block title %}Echyzen - Portfolio{% endblock %}</title>
		<meta name="description" content="portofolio, Tutoriels/astuces et galerie 3D/2D!!!" />
		<meta name="keywords" content="portofolio, galerie, infographie, informatique, programmation, zbrush, blender, html, css, php, ..." />
		<meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
		{% block stylesheet %}

			<link rel="stylesheet" media="screen" type="text/css" title="Design" href="{{ asset('css/design.css') }}" />

			{# Chargement du css de la fancyBox #}
			<link rel="stylesheet" media="screen" type="text/css" title="Design" href="{{ asset('css/jquery.fancybox.css') }}" />
			<link rel="stylesheet" media="screen" type="text/css" title="Design" href="{{ asset('css/sidebar_effect.css') }}" />
			
			<link rel="shortcut icon" href="{{ asset('css/favicon.ico') }}" >
			<!-- Icon Apple touch -->
			<link rel="apple-touch-icon" href= "{{ asset('css/icon_apple.png') }}" />
			<!-- Icon Windows 8 -->
			<meta name="application-name" content="Echyzen Portofolio's"/> 
			<meta name="msapplication-TileColor" content="#58595B" /> 
			<meta name="msapplication-TileImage" content="{{ asset('css/icon_microsoft.png') }}" />
			<link rel="apple-touch-icon" href= "{{ asset('js/modernizr.custom.js') }}" />

		{% endblock %}
	</head>


			
	<body>

		<div id="st-container" class="st-container">
			<div class="st-pusher">
			<div class="st-content"><!-- this is the wrapper for the content -->
			<div class="cbp-spmenu-top" id="top_menu">
				<h2>Menu Top</h2>
				<button class="closeShowTop" style="position: relative; bottom: 0px;background: red;">
					Close
				</button>
				<div id="showTopContainer"></div>
			</div>
				<header>

					<nav class="responsive-menu clearfix" id="responsive-menu">

					 
					  		<div id="st-trigger-effects">
								<button data-effect="st-effect-12"></button>
							</div>	

					  <ul>
						{% block menu %}
						{% endblock %}
					  </ul>
					</nav>
				</header>



			<div id="corps">
				<div id="progressBar"><div id="progressBarInside"></div></div>
				{% block body %}
				{% endblock %}
			</div>
			<footer> 
				<div id="cadre_footer">
					<div id="rond1"><img src="{{ asset('css/images/rond1.png') }}" alt="un rond" /></div>
					<div id="rond2"><img src="{{ asset('css/images/rond1.png') }}" alt="un rond" /></div>
					<div id="rond3"><img src="{{ asset('css/images/rond3.png') }}" alt="un rond" /></div>
					<div id="rond4"><img src="{{ asset('css/images/rond3.png') }}" alt="un rond" /></div>
					<div id="rond5"><img src="{{ asset('css/images/rond1.png') }}" alt="un rond" /></div>
					<div id="rond6"><img src="{{ asset('css/images/rond1.png') }}" alt="un rond" /></div>
					<p>
						Copyright © 2012 - {{ "now"|date('Y') }} - Echyzen - Tous droits réservés <br />
						Version 0.2.1<br />
					</p> 
				</div>
			</footer>

			</div><!-- /st-content -->







			
		</div>

			<nav class="st-menu st-effect-12" id="menu-12">

				<h2>Espace membre</h2>
<div id="st-trigger-effects">

					<ul>
						<li><span data-effect="st-effect-1">Connexion</span></li>
						<li><a href="#">Connexion</a></li>
						<li><a  href="#">Profil</a></li>
						<li><a  href="#">Paramètres</a></li>
						<li><a  href="#">Messagerie</a></li>
					</ul>
	</div>	
			</nav>

			<nav class="st-menu st-effect-1" id="menu-1">
				<h2>Profil</h2>
				<div id="st-trigger-effects">
				{# {% render(controller('EchyzenUserBundle:Security:login')) %} #}
				<span data-effect="st-effect-12">Retour</span>		
								
						    <form action="/Symfony/web/app_dev.php/login_check" method="post">
    <label for="username">Login :</label>
    <input type="text" id="username" name="_username" value="" />

    <label for="password">Mot de passe :</label>
    <input type="password" id="password" name="_password" />
    <br />
    <input type="submit" value="Connexion" />
  </form>
					<ul>
						<li><a href="#">Connexion</a></li>
						<li><a  href="#">Profil</a></li>
						<li><a  href="#">Paramètres</a></li>
						<li><a  href="#">Messagerie</a></li>
					</ul>
					</div>
			</nav>
			</div><!-- /st-container -->
			{% block javascripts %}
				<script src="//ajax.googleapis.com/ajax/libs/jquery/1.9.1/jquery.min.js"></script>
				
				{# Js du footer animation rond #}
				<script src="{{ asset('js/design_effect.js') }}" type="text/javascript" ></script>

				{# Js du menu espace membre #}
				<script src="{{ asset('js/sidebarEffects.js') }}" type="text/javascript" ></script>
				
				{# Js du TopMenu #}
				<script src="{{ asset('bundles/echyzennews/js/topMenu.js') }}" type="text/javascript" ></script>
				<script type="text/javascript" >
					jQuery(document).ready(function ($) {
					    var menuTop = document.getElementById( 'top_menu' );
					    $('.closeShowTop').click(function(){
					    	classie.toggle( this, 'active' );
							classie.toggle( menuTop, 'cbp-spmenu-open' );
							//classie.toggle( showTop, 'disabled' );
							$('#showTopContainer').empty();
					    });
					});
				</script>

				{# Js permettant submit by ajax #}
				<script src="http://malsup.github.com/jquery.form.js"></script>

				{# Js du menu principal #}
				<script src="{{ asset('js/responsiveMenu.js') }}" type="text/javascript" ></script>
				<script type="text/javascript" >
					jQuery(document).ready(function ($) {
					    $('#responsive-menu').responsiveMenu();
					});
				</script>

				{# Js de FancyBox #}
				<script src="{{ asset('js/fancybox.js') }}" type="text/javascript" ></script>
				<script src="{{ asset('js/jquery.fancybox.pack.js') }}" type="text/javascript" ></script>

				{# Js progressBar #}
				<script src="{{ asset('js/progress_bar.js') }}" type="text/javascript" ></script>

				<script src="{{ asset('bundles/fosjsrouting/js/router.js') }}"></script>
<script src="{{ path('fos_js_routing_js', {"callback": "fos.Router.setData"}) }}"></script>

			{% endblock %}

	</body>
</html>